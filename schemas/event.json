{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://peevem.org/schemas/event",
  "title": "",
  "description": "",
  "type": "object",
  "properties": {
    "date": {
      "$ref": "https://peevem.org/schemas/primitives/date",
      "title": "Event date",
      "description": "Used for sorting"
    },
    "uuid": {
      "$ref": "https://peevem.org/schemas/primitives/uuid",
      "title": "Event unique id",
      "description": "Used for references ; should be unique in a given stream"
    },
    "event": {
      "title": "Event verb",
      "description": "What occured?",
      "type": "string",
      "minLength": 1
    },
    "subject": {
      "$ref": "https://peevem.org/schemas/primitives/uuid",
      "title": "Event subject",
      "description": "What's concerned?"
    }
  },
  "required": [ "date", "uuid", "event" ]
}
